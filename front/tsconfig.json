{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2024",
        "moduleResolution": "bundler",
        "paths": {
            "#*": [
                "./src/pages/modules/*"
            ],
            "@*": [
                "./src/pages/*"
            ],
            "_*": [
                "./src/utils/*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "types": [
            "esbuild-style-plugin",
            "@wxn0brp/flanker-ui"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}